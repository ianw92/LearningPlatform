<div class='card'>
  <div class='card-header'>
    <a class='card-link' data-toggle='collapse' data-parent='#accordion' href='#collapse_<%= type %>_<%= todo_list.id %>'>
      <td><%= todo_list.title %></td>

      <% if type == 'main' %>
      <%= render partial: 'todo_lists/todo_list_edit_delete_links',
                 locals: { todo_list: todo_list } %>
      <% end %>

    </a>
  </div>

  <% if todo_list.id==@todo_lists_global[0].id %>
  <div id='collapse_<%= type %>_<%= todo_list.id %>' class='collapse show'>
  <% elsif !@current_task.nil? && todo_list.id==(@current_task.todo_list_id) %>
  <div id='collapse_<%= type %>_<%= todo_list.id %>' class='collapse show'>
  <% else %>
  <div id='collapse_<%= type %>_<%= todo_list.id %>' class='collapse'>
  <% end %>
  
    <%= render partial: 'todo_lists/todo_list_body',
               locals: { todo_list: todo_list,
                         type: type } %>
  </div>
</div>
