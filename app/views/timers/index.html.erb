<p id="notice"><%= notice %></p>

<h1>Timers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Study length</th>
      <th>Short break length</th>
      <th>Long break length</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timers.each do |timer| %>
      <tr>
        <td><%= timer.user %></td>
        <td><%= timer.study_length %></td>
        <td><%= timer.short_break_length %></td>
        <td><%= timer.long_break_length %></td>
        <td><%= link_to 'Show', timer %></td>
        <td><%= link_to 'Edit', edit_timer_path(timer) %></td>
        <td><%= link_to 'Destroy', timer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

