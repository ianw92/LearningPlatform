<%= form_with(model: comment, remote: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.hidden_field :week_id, id: :comment_week_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :user_id, id: :comment_user_id, class: 'form-control' %>
  </div>
  <div class="row">
    <div class="form-group col-12 col-md-9 col-lg-12">
      <%= form.text_area :body, id: :comment_body, class: 'form-control', placeholder: 'Add a comment' %>
    </div>

    <div class="form-group actions col-12 col-md-3 col-lg-12">
      <%= form.submit :class => "btn btn-primary"  %>
    </div>
  </div>
<% end %>
