<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.hidden_field :todo_list_id, id: :task_todo_list_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :task_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.text_field :due_date, id: :task_due_date, class: 'form-control',
            value: !task.due_date.nil? ? task.due_date.strftime('%d-%m-%Y') : '',
            "data-provide" => "datepicker",
            "data-date-format" => "dd-mm-yyyy",
            "data-date-orientation" => "auto" %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :completed, id: :task_completed, value: false %>
  </div>

  <div class="form-group actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>
