$('#collapse_main_<%= @completed_task.todo_list.id %>').html("<%=j render partial:'todo_lists/todo_list_body', locals: { todo_list: @completed_task.todo_list, type: 'main' } %>");
$('#collapse_popover_<%= @completed_task.todo_list.id %>').html("<%=j render partial:'todo_lists/todo_list_body', locals: { todo_list: @completed_task.todo_list, type: 'popover' } %>");

if ($('.completed_task').hasClass('task_overdue')) {
  $('.completed_task').css({'background-color':'#88ff88'}).animate({'background-color':'#FF0000'}, 3000);
} else if ($('.completed_task').hasClass('task_due_today')) {
  $('.completed_task').css({'background-color':'#88ff88'}).animate({'background-color':'#FFA500'}, 3000);
} else if ($('.completed_task').hasClass('task_due_tomorrow')) {
  $('.completed_task').css({'background-color':'#88ff88'}).animate({'background-color':'#FFFF00'}, 3000);
} else {
  $('.completed_task').css({'background-color':'#88ff88'}).animate({'background-color':'#ffffff'}, 3000);
}
