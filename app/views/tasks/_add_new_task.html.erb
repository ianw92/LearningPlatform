<%= form_with(model: task, local: true, :html => { :class => 'form-inline' }) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.hidden_field :todo_list_id, id: :task_todo_list_id, value: todo_list.id %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :task_title %>
  </div>

  <div class="form-group">
    <%= form.label :due_date %>
    <%= form.date_select :due_date, id: :task_due_date %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :completed, id: :task_completed, value: false %>
  </div>

  <!-- TODO Find a less hacky way to do this!!! -->
  <%= hidden_field_tag :redirect, :value => 1 %>

  <div class="form-group actions">
    <%= form.submit %>
  </div>
<% end %>
