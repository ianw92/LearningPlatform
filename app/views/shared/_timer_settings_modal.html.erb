<div class="modal fade" id="timer_settings_modal" tabindex="-1" role="dialog" aria-labelledby="timerSettingsModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Timer Settings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <h3>Set Timer Lengths (in minutes)</h3>
          <%= render 'timers/form', timer: Timer.find_by(user_id: current_user.id)%>
        </div>
      </div>
    </div>
  </div>
</div>
