<div class="<%= current_user.profile.get_show_notes_status %>">
  <%= form_with(model: note, remote: true) do |form| %>
    <% if note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

        <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.hidden_field :user_id, id: :note_user_id, value: user.id %>
    </div>

    <div class="form-group">
      <%= form.hidden_field :week_id, id: :note_week_id, value: week.id %>
    </div>

    <div class="form-group">
      <%= form.text_area :body, id: :body_textarea, value: note.body, class: 'form-control' %>
    </div>

    <div class="form-group actions">
      <%= form.submit :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
