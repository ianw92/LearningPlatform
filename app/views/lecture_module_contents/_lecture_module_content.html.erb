<% if lecture_module_content.description? || lecture_module_content.content? || lecture_module_content.youTube_link? %>
  <div>
    <div class='row'>
      <div class='col-9 col-sm-10 col-lg-11'>
        <h6><%= lecture_module_content.title %></h6>
      </div>
      <div class='col-3 col-sm-2 col-lg-1'>
        <% if can? :edit, lecture_module_content %>
          <%= link_to edit_lecture_module_content_path(lecture_module_content), data: { toggle: 'edit-lecture-module-content-tooltip'}, id: "edit_content_#{lecture_module_content.id}", title: "Edit Content" do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          |
        <% end %>
        <% if can? :destroy, lecture_module_content %>
          <%= link_to lecture_module_content, method: :delete, data: { confirm: 'Are you sure?', toggle: 'delete-lecture-module-content-tooltip'}, id: "delete_content_#{lecture_module_content.id}", title: "Delete Content" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <% if local_assigns.has_key? :show_pdf %>
      <% if local_assigns.fetch :show_pdf %>
        <% if lecture_module_content.content? %>
        <iframe src="<%= lecture_module_content.s3_url %>" allowfullscreen="allowfullscreen" webkitallowfullscreen mozallowfullscreen oallowfullscreen msallowfullscreen></iframe>
        <% end %>
      <% end %>
    <% end %>

    <br>

    <% if local_assigns.has_key? :show_youTube %>
      <% if local_assigns.fetch :show_youTube %>
        <% if lecture_module_content.youTube_link? %>
          <iframe src="<%= lecture_module_content.youTube_link %>"
            allow="encrypted-media" allowfullscreen></iframe>
        <% end %>
      <% end %>
    <% end %>

  </div>
  <br>
  <hr>
  <br>
<% end %>
