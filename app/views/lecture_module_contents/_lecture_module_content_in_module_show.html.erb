<% if lecture_module_content.description? || lecture_module_content.content? || lecture_module_content.youTube_link? %>
  <li class="list-item">
    <ul class="list-inline">
      <li class="list-inline-item"><%= lecture_module_content.description %></li>
      <li class="list-inline-item"><%= lecture_module_content.content.original_filename %></li>
      <li class="list-inline-item"><%= link_to 'Show', lecture_module_content %></li>
      <li class="list-inline-item"><%= link_to 'Edit', edit_lecture_module_content_path(lecture_module_content) %></li>
      <li class="list-inline-item"><%= link_to 'Destroy', lecture_module_content, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>

    <% if local_assigns.has_key? :show_pdf %>
      <% if local_assigns.fetch :show_pdf %>
        <% if lecture_module_content.content? %>
        <iframe src="<%= lecture_module_content.content.url %>" allowfullscreeen></iframe>
        <% end %>
      <% end %>
    <% end %>

    <br>

    <% if local_assigns.has_key? :show_youTube %>
      <% if local_assigns.fetch :show_youTube %>
        <% if lecture_module_content.youTube_link? %>
          <iframe src="<%= lecture_module_content.youTube_link %>"
            allow="encrypted-media" allowfullscreen></iframe>
        <% end %>
      <% end %>
    <% end %>

  </li>
<% end %>
